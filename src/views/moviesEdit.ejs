<!DOCTYPE html>
<html lang="es">

<%- include('partials/head')%>

<body>
    <%- include('partials/header')%>
    <div class="card col-12 col-md-8 mx-auto mt-5">
        <div class="card-header d-flex justify-content-between">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/movies">Peliculas</a></li>
              <li class="breadcrumb-item active" aria-current="page">
                Película a Editar: <b><%= Movie.title %></b> 
              </li>
            </ol>
          </nav>
        </div>
        <div class="card-body">
          <form class="row" action="/movies/create" method="POST">
              <div class="d-flex align-items-center">
                  <div class="row ">
                      <div class="col-12 col-md-6 ">
                        <label class="form-label" for="title">Título </label>
                        <p>
                          <input
                            class="form-control"
                            type="text"
                            name="title"
                            id=""
                            value="<%= Movie.title %>"
                            required
                          />
                        </p>
                      </div>
                      <div class="col-12 col-md-3">
                        <label class="form-label" for="rating">Rating </label>
                        <p>
                          <input
                            class="form-control"
                            type="number"
                            name="rating"
                            id=""
                            value="<%= Movie.rating %>"
                            required
                          />
                        </p>
                      </div>
                      <div class="col-12 col-md-3">
                        <label class="form-label" for="awards">Premios </label>
                        <p>
                          <input
                            class="form-control"
                            type="number"
                            name="awards"
                            id=""
                            value="<%= Movie.awards %>"
                            required
                          />
                        </p>
                      </div>
                      <div class="col-12 col-md-3">
                        <label class="form-label" for="release_date"
                          >Fecha de Estreno</label
                        >
                        <p>
                          <input
                            class="form-control"
                            type="date"
                            name="release_date"
                            id=""
                            value="<%= moment(Movie.release_date).format('YYYY-MM-DD') %>"
                            required
                          />
                        </p>
                      </div>
                      <div class="col-12 col-md-3">
                        <label class="form-label" for="length">Duración </label>
                        <p>
                          <input
                            class="form-control"
                            type="number"
                            name="length"
                            id=""
                            value="<%= Movie.length %>"
                            required
                          />
                        </p>
                      </div>
                      <div class="col-12 col-md-3">
                        <label class="form-label" for="genre_id">Género </label>
                        <p>
                          <select class="form-select" name="genre_id" id="" required>
                            <option value="" disabled selected>
                              - Selecciona el Género -
                            </option>
                            <% allGenres.forEach(genre => { %>
                                <option value="<%= genre.id %>" <% if (Movie.genre_id == genre.id) { %><%= 'selected' %><% }; %>><%= genre.name %></option>
                            <% }); %>
                          </select>
                        </p>
                      </div>
          
                      <div class="col-12 col-md-3">
                        <div>
                          <label for="formFile" class="form-label">Cambiar imágen</label>
                          <input
                            class="form-control"
                            type="file"
                            id="formFile"
                            name="image"
                          />
                        </div>
                      </div>
                      <div class="mb-3 col-12">
                        <div class="row">
                          <% actors.forEach((actor, i) => { %>
                          <div class="col-12 col-md-3">
                            <div class="form-check">
                                <input name="actors" class="form-check-input" type="checkbox" <%= Movie.actors.map(actor=>actor.id).includes(actor.id) && 'checked' %> value="<%= actor.id %>" id="actor<%= actor.id %>">
                                <label class="form-check-label" for="actor<%= actor.id %>">
                                 <%= actor.first_name %> <%= actor.last_name %>
                                </label>
                            </div>
                          </div>
          
                          <% }) %>
                        </div>
                      </div>
                      <button class="btn btn-sm btn-outline-dark" type="submit">
                        Actualizar
                      </button>
                    </div>
              </div>
            
          </form>
        </div>
      </div>
</body>

</html>